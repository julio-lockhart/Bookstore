<div class="container topBottomOffset">
    <div class="col-lg-8 col-centered">
        {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}

        <form action="/login" method="post" id="commentForm">
            <div class="form-group">
                <label for="username">UserName</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Enter Username" value="john.doe2@email.com">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="12345">
            </div>
            <div class="g-recaptcha" data-sitekey="6LenlzwUAAAAAKBk8UklktCmS5Tl90ZOLi-qG1vo"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <br>
        </form>
    </div>
</div>

<script src='https://www.google.com/recaptcha/api.js'></script>